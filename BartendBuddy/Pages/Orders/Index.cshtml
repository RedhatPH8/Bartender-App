@model BartendBuddy.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Orders</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].Customer)
            </th>
